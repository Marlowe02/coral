<section class="bg-gradient-to-r from-black via-gray-900 to-black y-24 ">
  <div class="max-w-7xl mx-auto grid grid-cols-2  px-8 lg:px-0">
    {% comment %} image container {% endcomment %}
    <div class=""><img
        src="{{ section.settings.main_img |  image_url }}"
        alt=""
        height=""
        width=""
        class=""></div>
    {% comment %} text container {% endcomment %}

    <div class="text-white pb-12 pt-24">
      {% for block in section.blocks %}
        {% if block.type == 'heading-text' %}
          <h2 class="text-[60px] font-bold">{{ block.settings.heading }}</h2>
        {% elsif block.type == 'sub-text' %}
          <p class="max-w-[320px] mt-6 leading-7 tracking-wider">{{ block.settings.sub_text }}</p>
        {% elsif block.type == 'button' %}
          <a href="{{ block.settings.btn_url }}">
            <button class="mt-12 bg-white text-slate-950 py-3 px-7 cursor-pointer flex justify-center items-center gap-2 hover:text-white hover:bg-slate-800 border-2 border-white duration-150 transition-all">{{ block.settings.btn_text }}</button>
          </a>

        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Image text",
    "settings": [
      {
        "type": "image_picker",
        "id": "main_img",
        "label": "Main image"
      }
    ],
    "blocks": [
      {
        "type": "heading-text",
        "name": "Heading text",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading text",
            "default": " Style with fashion"
          }
        ]
      }, {
        "type": "sub-text",
        "name": "Sub text",
        "limit": 2,
        "settings": [
          {
            "type": "text",
            "id": "sub_text",
            "label": "Sub text",
            "default": "Lustrous yet understated. The new eveningwear collection exclusively offered at the reopened Giorgio Armani boutique in LosAngeles. "
          }
        ]
      }, {
        "type": "button",
        "name": "Button",
        "limit": 2,
        "settings": [
          {
            "type": "url",
            "id": "btn_url",
            "label": "Button link"
          }, {
            "type": "text",
            "id": "btn_text",
            "label": "Button text",
            "default": " Shop now!"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image text"
      }
    ]
  }
{% endschema %}