<section class="max-w-7xl mx-auto flex justify-between items-center px-8 lg:px-0 gap-12 py-4">
  {% for block in section.blocks %}
    {% if block.settings.brand_img %}
      <img
        src="{{block.settings.brand_img | image_url}}"
        alt=""
        height=""
        width=""
        class="h-12 w-24 object-contain">
    {% else %}
      <img
        src="{{ 'df.brand.png' | asset_url }}"
        alt=""
        height=""
        width=""
        class="h-12 w-24">
    {% endif %}
  {% endfor %}
</section>


{% schema %}
  {
    "name": "brands",
    "settings": [],
    "blocks": [
      {
        "type": "brand",
        "name": "brand",
        "limit": 8,
        "settings": [
          {
            "type": "image_picker",
            "id": "brand_img",
            "label": "Brand image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brands",
        "blocks": [
          {
            "type": "brand"
          },
          {
            "type": "brand"
          },
          {
            "type": "brand"
          },
          {
            "type": "brand"
          }, {
            "type": "brand"
          }
        ]
      }
    ]
  }
{% endschema %}