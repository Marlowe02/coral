<section>
  <div class="grid grid-cols-2 gap-6 py-4 px-8 md:px-0 max-w-7xl mx-auto relative">
    <div class="vertical-text absolute -left-[38px] top-4">Explore new and popular styles </div>

    <div class="bg-red-50">
      <img draggable="false" src="{{section.settings.main_img |  image_url }}" alt="" height="" width="" class="w-full">
      </div>
    <div class="grid grid-cols-2 gap-6">
      <div> <img draggable="false" src="{{section.settings.side_img_1 |  image_url }}" alt="" height="" width="" class=""></div>
      <div> <img draggable="false" src="{{section.settings.side_img_2 |  image_url }}" alt="" height="" width="" class=""></div>
      <div> <img draggable="false" src="{{section.settings.side_img_3 |  image_url }}" alt="" height="" width="" class=""></div>
      <div> <img draggable="false" src="{{section.settings.side_img_4 |  image_url }}" alt="" height="" width="" class=""></div>
      
        </div>
  </div>
</section>

<style>
  .vertical-text {
    writing-mode: vertical-rl; /* Makes the text vertical */
    transform: rotate(180deg); /* Rotates the text upside down */
    text-transform: uppercase; /* Optional: Make text uppercase */
    font-size: 24px; /* Adjust as needed */
    font-weight: semi-bold;
    letter-spacing: 2px; /* Spacing for better readability */
}
</style>

